# Tomcat
#
# VERSION 4

FROM       docker.xlands-inc.com/baoyu/java8
MAINTAINER djluo <dj.luo@baoyugame.com>

ENV TomcatVer 8.0.32
ADD ./apache-tomcat-8.0.32 /apache-tomcat-8.0.32

ADD ./entrypoint.pl /entrypoint.pl
ADD ./gzip.sh       /tomcat/gzip.sh
ADD ./cmd.sh        /tomcat/cmd.sh

ADD ./conf/server.xml.8       /tomcat/conf/server.xml
#ADD ./conf/java-options.conf  /tomcat/conf/java-options.conf
ADD ./conf/logging.properties /tomcat/conf/logging.properties

RUN chmod 644 /apache-tomcat-8.0.32/conf/*

ENTRYPOINT ["/entrypoint.pl"]
CMD        ["/tomcat/cmd.sh"]
